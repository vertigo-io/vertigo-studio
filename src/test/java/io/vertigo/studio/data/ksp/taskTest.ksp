package io.vertigo.studio.dao

create Task TkGetFirstCar {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select * from car
				limit 1
			"
	attribute dtoCar {domain : DoDtCar  cardinality:"?" inOut :"out"}
}


/*To test PAO*/
create Task TkPing {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select 1
			"
	attribute result {domain : DoInteger  cardinality:"?" inOut :"out"}
}


create Task TkOneParamSelect {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select 1 where 1 = #input#
	
			"
	attribute input {domain : DoInteger  cardinality:"1" inOut :"in"}
	attribute result {domain : DoInteger  cardinality:"1" inOut :"out"}
}

create Task TkOneListParamSelect {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select 1 where 1 in  (#input.rownum#)
	
			"
	attribute input {domain : DoInteger  cardinality:"*" inOut :"in"}
	attribute result {domain : DoInteger  cardinality:"1" inOut :"out"}
}


create Task TkSelectCarByIds {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select * from car where id in (#input.rownum.id#)
			"
	attribute input {domain : DoDtCar  cardinality:"*" inOut :"in"}		
	attribute dtoCar {domain : DoDtCar  cardinality:"*" inOut :"out"}
}